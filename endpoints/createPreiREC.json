{
  "post": {
    "tags": [
      "Assets"
    ],
    "summary": "Cria um pré-IREC (Pre IREC)",
    "parameters": [],
    "requestBody": {
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "tokenId": {
                "type": "string",
                "description": "ID do token a ser criado",
                "example": "30a91697-460d-4783-a1e3-d72cf83c0bd1"
              },
              "enterprise": {
                "type": "string",
                "description": "Nome da empresa",
                "example": "CPQD"
              },
              "volume": {
                "type": "integer",
                "description": "Volume do ativo",
                "example": 2000
              },
              "generationPeriod": {
                "type": "string",
                "description": "Período de geração do ativo",
                "example": "10/25 - 12/25"
              },
              "energySource": {
                "type": "string",
                "description": "Fonte de energia",
                "example": "HYDRO"
              },
              "expirationDate": {
                "type": "string",
                "description": "Data de expiração",
                "example": "01-26"
              }
            },
            "required": [
              "tokenId",
              "enterprise",
              "volume",
              "generationPeriod",
              "energySource",
              "expirationDate"
            ]
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Pré-IREC criado com sucesso",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "transactionId": {
                  "type": "string",
                  "description": "Identificador da transação",
                  "example": "burn_tx_13579"
                },
                "status": {
                  "type": "string",
                  "enum": [
                    "SUCCESS",
                    "FAILED"
                  ],
                  "description": "Status da criação do pré-IREC",
                  "example": "SUCCESS"
                }
              }
            }
          }
        }
      },
      "400": {
        "$ref": "../schemas/genericResponses/internalServerError.json"
      },
      "500": {
        "$ref": "../schemas/genericResponses/internalServerError.json"
      }
    }
  }
}